{
  "name": "hgrid.io",
  "version": "0.0.1",
  "description": "",
  "main": "eleventy.js",
  "scripts": {
    "start": "eleventy --serve & npm run watch:css",
    "build": "eleventy && npm run build:css",
    "debug": "DEBUG=Eleventy* npx @11ty/eleventy",
    "watch:css": "sass --watch assets/scss/main.scss:assets/css/devstyle.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 4 versions' assets/css/devstyle.css -o assets/css/style.css",
    "minify:css": "sass assets/css/style.css assets/css/style.min.css --style=compressed",
    "build:css": "npm run prefix:css && npm run minify:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahansson/hgrid.io.git"
  },
  "keywords": [],
  "author": "Atle Hansson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ahansson/hgrid.io/issues"
  },
  "homepage": "https://hgrid.io",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "autoprefixer": "^10.2.4",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.6",
    "sass-loader": "^10.1.1"
  }
}
